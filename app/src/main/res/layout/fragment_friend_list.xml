<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Content Layout (RecyclerViews and Tabs) -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/navigation_bar"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:padding="16dp">

    <!-- Tabs for switching between suggestions and friends -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/suggestionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions" />

        <Button
            android:id="@+id/myFriendsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Friends"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Title for Friend Requests Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Requests"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView for Friend Requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Title for People You May Know Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People You May Know"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView for People You May Know -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/peopleYouMayKnowRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Navigation Bar -->
        <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF">

            <ImageButton
            android:id="@+id/homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/homepage"
            android:src="@drawable/trang_chu" />

            <ImageButton
            android:id="@+id/friend_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/friend_list"
            android:src="@drawable/ket_ban" />

            <ImageButton
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/video"
            android:src="@drawable/video" />

            <ImageButton
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/notification"
            android:src="@drawable/notification" />

            <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/profile"
            android:src="@drawable/trang_ca_nhan" />
    </LinearLayout>
</RelativeLayout>
